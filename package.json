{
  "name": "vue-ssr-helloworld",
  "description": "Simple Vue SSR demo",
  "version": "1.0.0",
  "author": "Vitaly Mosin <mosinve@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "build:server && build:client",
    "build:server": "cross-env NODE_ENV=production webpack --progress --hide-modules --config ./config/webpack.server.config.js",
    "build:client": "cross-env NODE_ENV=production webpack --progress --hide-modules --config ./config/webpack.client.config.js",
    "run": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "express": "^4.16.3",
    "vue": "^2.5.11",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.16",
    "vuex": "^3.0.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "chokidar": "^2.0.4",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.4",
    "memory-fs": "^0.4.1",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "vue-loader": "^13.0.5",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
